{% extends 'bases/bien_base.html.twig' %}

{% block title %}Bien index{% endblock %}

{% block bienBlock %}
    <h1>Bien index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Date Commande</th>
            <th>Date Livraison</th>
            <th>Actif</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for bien in biens %}
            <tr>
                <td>{{ bien.id }}</td>
                <td>{{ bien.nom }}</td>
                <td>{{ bien.description }}</td>
                <td>{{ bien.prix }}</td>
                <td>{{ bien.dateCommande ? bien.dateCommande.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                <td>{{ bien.dateLivraison ? bien.dateLivraison.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                <td>{{ bien.actif ? 'Yes' : 'No' }}</td>
                <td>
                    {{ include('_btn_show.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}